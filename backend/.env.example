# Database connection string from Supabase
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT secret from Supabase (found in API settings)
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Your own JWT secret for additional security (REQUIRED - no default)
JWT_SECRET_KEY=your-random-secret-key

# Frontend URL for CORS (production deployment URL, e.g., https://your-app.vercel.app)
FRONTEND_URL=https://your-app.vercel.app

# Google Drive API Key (for public folder access)
GOOGLE_DRIVE_API_KEY=your-google-api-key

# Port
PORT=5000
